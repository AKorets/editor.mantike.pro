@import './style'
@import './mixin'
@import './boxes'
@import './joyride'

fonts = "HelveticaNeue", "Helvetica Neue", "HelveticaNeueRoman", "HelveticaNeue-Roman", "Helvetica Neue Roman", 'TeXGyreHerosRegular', "Helvetica", "Tahoma", "Geneva", "Arial", sans-serif

body, html
  margin 0px
  padding 0px
  width 100%
  height 100%

body
    border-box()
    background #161616 url('img/dark_leather.png') repeat
    color white

    font-family fonts

    >header
        overflow hidden
        height 32px
        border-box()
        inset-box-shadow(0px, -1px, 3px, #1d1d1d)
        vbg-gradient(#474747, #303030)
        h1
            line-height 32px
            float left
            padding 0 20px
            margin 0
            border-right 1px solid #181818
            box-shadow(1px, 0px, 1px, #525252)
            text-shadow 0 -1px 1px black
            font-weight normal
            a
                font-size 16px
                text-decoration none
            a:hover
                color white
        h1:first-child a
            font-size 22px

.panel
    color #161616
    background white url('img/groovepaper.png') 0 0 repeat
    margin 5px 20px
    padding 15px
    border-radius 15px
    a
        color #161688
    a:hover
        color #881616

#v-suits
    box-width 48px
#h-suits
    box-height 48px

.suit
    background-repeat no-repeat
    background-position center
    padding 12px 5px
    margin 1px
    min-width 48px
    height 48px
    cursor pointer
    border-radius 10px
    font-weight bold
    color #441616
    text-align center

.suit.active
    background-color rgba(0, 0, 0, 0.2)

.suit:hover
    background-color rgba(0, 0, 0, 0.1)

.card
    border-radius 5px
    margin 5px
    cursor pointer

.card:hover
    box-shadow 0 0 5px 5px #888

.buttons.vbox
    margin 0 10px
.buttons.hbox
    margin 10px 0

.buttons
    header
        hbox()
        padding 0 5px 5px 5px
        font-size large
    label
        hbox()
        cursor default
        margin 5px 0 0 0
        padding 5px
        font-style italic
        border-width 1px 0 0 0
        border-style dashed
        border-color #161616
    a, input
        hbox()
        margin 5px
        padding 5px
        text-decoration none
        color black
        box-shadow 2px 2px 1px #161616
        border 1px solid #161616
        border-radius 5px
    a
        cursor pointer
    a:hover
        box-shadow 5px 5px 2px #161616
    a.active:before
        content '\2665\0000a0'
    span.active
        border-width 0 0 1px 0
        border-color #161616
        border-style dashed

#label-type
    text-align justify

#canvas
    border 1px dotted black
    padding 0
    > *
        margin 0
        padding 0

.ui-resize-helper
    border 1px dotted red

#sharethis
    margin 20px 0 0 0

#help-tour
    display none

footer
  h5
    margin-bottom 1px
  h6
    font-weight normal
    margin-top 1px
  .hearts
    color pink
    font-size 120%
    padding-left 0.25ex
    padding-right 0.25ex

.ui-widget
    font-family fonts
    font-size 1em

#decklist
    display none
    a
        text-decoration none
    a:hover
        text-decoration underline

#open-link, #html-code, #bb-code, #snippet
    display none

#deck-status
    font-size small
    color #888
    a
        color #888
        &:hover
            color #881616

.news
    font-weight bold
    a
        color #444
        &:hover
            color #881616
